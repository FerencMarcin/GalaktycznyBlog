<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GwiezdnyBlog - {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
            <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />
        {% endblock %}
    </head>
    <body>

    <!--NAV-->
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark fixed-top">
        <div class="container">

            <a class="navbar-brand" href="{{ path('index') }}">GwiezdnyBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item {% if app.request.get('_route') == 'index' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('index') }}">Strona główna</a>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') == 'latest_publications' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('latest_publications') }}">Najnowsze</a>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') == 'my_publications' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('my_publications') }}">Moje wpisy</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item {% if app.request.get('_route') == 'app_logout' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_logout') }}">Wyloguj się</a>
                        </li>
                    {% else %}
                        <li class="nav-item {% if app.request.get('_route') == 'app_login' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_login') }}">Zaloguj się</a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'app_register' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_register') }}">Zarejestruj się</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!--CONTENT-->
    {% block content %}{% endblock %}

    <!--FOOTER-->
    <footer class="footer py-4 fs-5 bg-dark">
        <div class="container">
            <div class="d-flex justify-content-center text-white">
                Copyright &copy; MF - GalaktycznyBlog
                <script>
                    document.write(new Date().getFullYear());
                </script>
            </div>
        </div>
    </footer>
        {% block javascripts %}
            <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous" ></script>
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
